        <WebView
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:id="@+id/webView2"/>

        <WebView
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:id="@+id/webView3"/>
        <WebView
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:id="@+id/webView4"/>
        <WebView
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:id="@+id/webView5"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
